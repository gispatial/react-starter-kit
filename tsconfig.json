{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "tests/setupTests.ts"
  ],
  "include": [
    "src"
  ]
}
